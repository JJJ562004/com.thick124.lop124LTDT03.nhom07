<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/galleryLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera.them_anh"
    android:backgroundTint="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/them_anh_topToolbar_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/them_anh_closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_close_32"
            android:background="@color/white"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/them_anh_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="283dp"
            android:layout_toRightOf="@id/them_anh_closeBtn"
            android:backgroundTint="@color/blue"
            android:text="@string/add_image" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/them_anh_topToolbar_gallery"
        android:padding="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/captured_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />
        </FrameLayout>

    </RelativeLayout>





</RelativeLayout>