<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upImage_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uploadedimage_header"
        app:layout_constraintVertical_bias="0.0"
        app:spanCount="2" />


    <LinearLayout
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toTopOf="parent"
        android:gravity="center"
        android:id="@+id/uploadedimage_header"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/upImage_searchBar"
            android:textSize="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:paddingStart="20dp"
            android:drawableStart="@drawable/ic_search"
            android:background="@drawable/corner_round_search"
            android:drawablePadding="8dp"
            android:hint="Tìm ảnh"
            android:textColor="@color/black"
            />

        <ImageButton
            android:id="@+id/return_image_upload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_return"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
